          "max": 50,
          "unit": "%",
          "default": 10
        },
        {
          "type": "range",
          "id": "text_position_right",
          "label": "Position Right",
          "min": 0,
          "max": 50,
          "unit": "%",
          "default": 10
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background"
        },
        {
          "type": "header",
          "content": "Text Box Content"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "image_title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subheading",
          "default": "Subheading"
        },
        {
          "type": "text",
