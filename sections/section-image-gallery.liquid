          "label": "Button full width"
        },
        {
          "type": "select",
          "id": "button_position",
          "label": "Button position",
          "default": "below",
          "options": [
            { "value": "next", "label": "Next text" },
            { "value": "right", "label": "Right text" },
            { "value": "below", "label": "Below text" }
          ]
        },
        {
          "type": "header",
          "content": "Text Box Color"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Heading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Subheading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button label",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_bg_color",
          "label": "Button background",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "Text Box Font Size"
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Heading",
          "min": 13,
          "max": 80,
          "unit": "px",
          "default": 50
        },
        {
          "type": "range",
          "id": "subtitle_size",
          "label": "Subheading",
          "min": 13,
          "max": 80,
          "unit": "px",
          "default": 25
