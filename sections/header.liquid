{
   "name": "Header",
   "settings": [
      {
         "type": "header",
         "content": "Layout"
      },
      {
         "type": "select",
         "id": "layout",
         "label": "Section Layout Mode",
         "default": "full",
         "options": [
            {
               "value": "boxed",
               "label": "Boxed"
            },
            {
               "value": "full",
               "label": "Wide"
            }
         ]
      },
      {
         "type": "range",
         "id": "header_style",
         "label": "Header style",
         "min": 1,
         "max": 31,
         "default": 1
      },
      {
         "type": "checkbox",
         "id": "header_overlay",
         "label": "Overlay (Transparent) Header"
      },
      {
         "type": "checkbox",
         "id": "shadow_menu",
         "label": "Shadow when hover on menu",
         "default": true
      },
      {
         "type": "checkbox",
         "id": "header_border_bottom",
         "label": "Border bottom"
      },
      {
         "type": "checkbox",
         "id": "header_topbar",
         "label": "Show Top Bar",
         "default": true
      },
      {
         "type": "header",
         "content": "Desktop Logo image"
      },
      {
         "type": "image_picker",
         "id": "logo",
         "label": "Image"
      },
      {
         "type": "range",
         "id": "logo_max_width",
         "label": "Custom logo width",
         "min": 100,
         "max": 400,
         "step": 5,
         "unit": "px",
         "default": 210,
         "info": "You must upload double the pixel dimensions image to adapt retina display. Eg. setting 100px -> Upload 200px"
      },
      {
         "type": "header",
         "content": "Mobile Logo image"
      },
      {
         "type": "image_picker",
