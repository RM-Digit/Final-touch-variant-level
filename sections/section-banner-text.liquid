{% include 'banner-text-snippet' %}

{% schema %}
{
  "name": "Banner & Text",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Banner & Text' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Banner & Text"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_size",
          "label": "Image size",
          "default": "870",
          "info": "E.g: 870x275"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Text Box Content"
        },
        {
          "type": "text",
          "id": "image_title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "image_subtitle",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link to"
        },
        {
          "type": "header",
          "content": "Text Box Style"
        },
        {
          "type": "checkbox",
          "id": "title_text_bold",
          "label": "Bold Heading"
        },
        {
          "type": "checkbox",
          "id": "subtitle_text_bold",
          "label": "Bold Subheading"
        },
        {
          "type": "header",
          "content": "Text Box Color"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Heading",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Subheading",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button label",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_bg_color",
          "label": "Button background",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "Text Box Font Size"
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Heading",
          "min": 15,
          "max": 80,
          "unit": "px",
          "default": 30
        },
        {
          "type": "range",
          "id": "subtitle_size",
          "label": "Subheading",
          "min": 15,
          "max": 80,
          "unit": "px",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner & Text",
      "category": "Banner",
      "blocks": [
        { "type": "image" },
		{ "type": "text" }
      ]
    }
  ]
}
{% endschema %}