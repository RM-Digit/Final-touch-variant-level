{% include 'newsletter-snippet' %}

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Newsletter' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Newsletter"
    }, 
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "bar-boxed",
      "options": [
        { "value": "bar-boxed", "label": "Boxed" },
        { "value": "boxed-bg", "label": "Boxed background" },
        { "value": "full", "label": "Wide" },
        { "value": "wide-padding", "label": "Wide padding" }
      ]
    },
    {
      "type": "range",
      "id": "newsletter_layout",
      "label": "Style",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1,
      "info": "If you select Style 5, please upload image to Background image."
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "select",
      "id": "bg_style",
      "label": "Background style",
      "default": "color",
      "options": [
        { "value": "color", "label": "Color" },
        { "value": "image", "label": "Image" }
      ]
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Style",
      "default": "none",
      "options": [
        { "value": "full", "label": "Full" },
        { "value": "container", "label": "Container" },
        { "value": "none", "label": "None" }
      ]
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Width",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Color",
      "default": "#dddddd"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Text placeholder",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Newsletter form"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }, 
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }, 
    {
      "type": "checkbox",
      "id": "bigger_size",
      "label": "Bigger size"
    },
    {
      "type": "select",
      "id": "email_type",
      "label": "Automated Email Marketing",
      "default": "klaviyo",
      "options": [
        { "value": "klaviyo", "label": "Klaviyo" },
        { "value": "mailchimp", "label": "MailChimp" }
      ]
    },
    {
      "type": "textarea",
      "id": "mailing_form_action",
      "label": "Form Action"
    },
    {
      "type": "paragraph",
      "content": "Mailchimp: [Where do I get my MailChimp Form Action](http:\/\/arenacommerce.com\/blogs\/faq\/shopify-theme-how-to-get-a-mailchimp-form-action-url)"
    },
    {
      "type": "paragraph",
      "content": "Klaviyo: Please copy the value of input[name='g'] from the KLAVIYO form and paste here."
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "Text placeholder",
      "default": "Your e-mail address"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "1",
      "options": [
        { "value": "1", "label": "Primary button" },
        { "value": "2", "label": "Secondary button" },
        { "value": "3", "label": "Tertiary button" }
      ]
    },
    {
      "type": "header",
      "content": "Terms and condition"
    },
    {
      "type": "checkbox",
      "id": "condition",
      "label": "Enable terms and condition"
    },
    {
      "type": "html",
      "id": "html",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Blog item"
    },
    {
      "type": "select",
      "id": "blog_position",
      "label": "Position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Select a Blog to show"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Newsletter-footer"
    }
  ]
}
{% endschema %}
