{% include 'subcollections-template-snippet' %}

{% schema %}
  {
    "name": "Promo without sidebar",
    "settings": [
      {
        "type": "image_picker",
        "id": "breadcrumb_image",
        "label": "Breadcrumb image"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "checkbox",
            "id": "width",
            "label": "Full width"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "header",
            "content": "Text"
          },
          {
            "type": "textarea",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Shop now"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "header",
            "content": "Color"
          },
          {
            "type": "color",
            "id": "heading_color",
            "label": "Heading",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "subheading_color",
            "label": "Subheading",
            "default": "#ffffff"
          },  
          {
            "type": "color",
            "id": "button_color",
            "label": "Button label",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "button_bg_color",
            "label": "Button background",
            "default": "#06bec7"
          }
        ]
      },
      {
        "type": "subcollections",
        "name": "Category",
        "limit": 1,
        "settings": [
          {
            "type": "header",
            "content": "Category"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Shop by category"
          },
          {
            "type": "link_list",
            "id": "menu_item",
            "label": "Menu item"
          },
          {
            "type": "header",
            "content": "Image"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "type": "product",
        "name": "Product",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Lastest Products"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection item"
          },
          {
            "type": "range",
            "id": "limited",
            "label": "Total items",
            "min": 4,
            "max": 20,
            "default": 8
          }
        ]
      } 
    ]
  }
{% endschema %}