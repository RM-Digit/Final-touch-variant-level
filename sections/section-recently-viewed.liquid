{% include 'recently-viewed-snippet' %}

{% schema %}
{
  "name": "Recently Viewed",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "default": "1",
      "options": [
        { "value": "1", "label": "4 item per row" },
        { "value": "2", "label": "Flex" }
      ]
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text",
      "default": "Latest viewed"
    },
    {
      "type": "checkbox",
      "id": "bigger_size",
      "label": "Bigger size"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center",  "label": "Center" },
        { "value": "right",  "label": "Right" }
      ]
    },
    {
      "type": "checkbox",
      "id": "border_line",
      "label": "Border line"
    }
  ],
  "presets": [
    {
      "name": "Recently Viewed",
      "category": "Advanced layout"
    }
  ]
}
{% endschema %}
