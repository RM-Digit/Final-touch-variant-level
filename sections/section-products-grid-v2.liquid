{% include 'products-grid-snippet-v2' %}

{% schema %}
{
  "name": "Products Grid V2",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Products Grid V2' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Products Grid V2"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full",  "label": "Wide" }
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": " Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "product_alignment",
      "label": "Product text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }, 
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text",
      "default": "Newarrivals"
    },
    {
      "type": "checkbox",
      "id": "bigger_size",
      "label": "Bigger size"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "checkbox",
      "id": "navigator",
      "label": "Show Navigator",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 1,
      "settings": [
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection item"
        },
        {
          "type": "checkbox",
          "id": "border_top",
          "label": "Border top",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "border_bottom",
          "label": "Border bottom",
          "default": true
        },
        {
          "type": "range",
          "id": "limited",
          "label": "Total items",
          "min": 1,
          "max": 8,
          "step": 1,
          "default": 3 
        }
      ]
    },
    {
      "type": "image",
      "name": "Banner",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button label"
        },
        {
          "type": "header",
          "content": "Color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button background",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_label_color",
          "label": "Button label",
          "default": "#000000"
        },
        {
          "type": "header",
          "content": "Font size"
        },
        {
          "type": "range",
          "id": "text_size",
          "label": "Heading",
          "min": 15,
          "max": 80,
          "unit": "px",
          "default": 40
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products Grid V2",
      "category": "Collection",
      "blocks": [
        { "type": "product" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}