{% include 'testimonial-snippet' %}
  
{% schema %}
{
  "name": "Customer",
  "max_blocks": 6,
  "settings": [
  {
      "type": "paragraph",
      "content": "Created by 'Testimonial' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Testimonial"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        {  "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "checkbox",
      "id": "border",
      "label": "Border"
    },
    {
      "type": "checkbox",
      "id": "quote_icon",
      "label": "Show quote icon",
      "default": true
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "select",
      "id": "bg_style",
      "label": "Style",
      "default": "color",
      "options": [
        { "value": "color", "label": "Color" },
        { "value": "image",  "label": "Image" }
      ]
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": " Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text",
      "default": "What Customers Are Saying"
    },
    {
      "type": "checkbox",
      "id": "bigger_size",
      "label": "Bigger size"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Block settings"
    },
    {
      "type": "color",
      "id": "comment_color",
      "label": "Comment color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "comment_size",
      "label": "Comment font size",
      "min": 16,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "rating_size",
      "label": "Rating font size",
      "min": 14,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "default": 5,
          "min": 1,
          "max": 5,
          "step": 1
        },
        {
          "label": "Comment",
          "id": "content",
          "type": "richtext"
        },
        {
          "label": "Date",
          "id": "date",
          "type": "text"
        }
      ]
    }
    
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Advanced layout",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}
