{% unless settings.breadcrumb_styles == 'none' %}{% include 'breadcrumb' %}{% endunless %}

<div class="container">
  <div id="col-main" class="page-reset">

    <h1 class="page-heading">{{ 'customer.reset_password.page_title' | t }}</h1>

    <div class="row">

      <div class="col-sm-6 col-12">
        <p class="note">{{ 'customer.reset_password.caption' | t: email: email }}</p>
        <div class="form-wrapper">

          {% form 'reset_customer_password' %}

            {% if form.errors %}
              <div class="alert alert-danger">
                <button type="button" class="close" title="{{'customer.general.close' | t }}" data-dismiss="alert">Ã—</button>
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div id="reset-form">
              <div class="control-wrapper">
                 <label for="customer_password">{{ 'customer.reset_password.password' | t }}</label>
                <input type="password" value="" name="customer[password]" id="customer_password" placeholder="{{ 'customer.reset_password.password' | t }}" />
              </div>

              <div class="control-wrapper">
                <label for="customer_password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" />
              </div>

              <div class="control-wrapper last">
                <button class="btn btn-1" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
              </div>
            </div>
          
          {% endform %}
        </div>
      </div>

    </div>

  </div>
</div>
