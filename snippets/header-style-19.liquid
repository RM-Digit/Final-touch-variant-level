{% include 'header-top-bar' %}

<div class="header-main">
  <div class="header-main-inner">
  
    <div class="{{ _layout_class }}">
      <div class="container-border">
        <div class="table-row">

          <div class="navbar navbar-responsive-menu d-lg-none">
            <div class="responsive-menu">
              <span class="bar"></span>
              <span class="bar"></span>
              <span class="bar"></span>
            </div>
          </div>
          
          {% include 'header-mobile-cart-icon' %}
          {% include 'header-logo' %}
          {% include 'header-search' %}
          {% include 'header-icons' %}

        </div>
      </div>
    </div>

  </div>
</div>

{% unless _nav_linklist == blank and _vertical_nav_linklist == blank %}
  <div class="header-navigation d-none d-lg-block">

    <div class="{{ _layout_class }}">
      <div class="container-border">
        <div class="table-row{% if _header_style == 26 %} row{% endif %}">
          <div class="nav-vertical-menu{% if _header_style == 26 %} col-lg-3{% endif %}">{% include 'header-vertical-menu' %}</div>
          <div class="nav-menu{% if _header_style == 26 %} col-lg-9{% endif %}">{% include 'header-horizontal-menu' %}</div>
        </div>
      </div>
    </div>

  </div>
{% endunless %}
