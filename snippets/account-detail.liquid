<div class="account-details">
  <h2 class="account-heading">{{'customer.account.heading' | t }}</h2>
  <p>{{ 'customer.account.logout_link_html' | t }}</p>

  <div class="info">
    <div class="author"><i class="demo-icon icon-user"></i>{{ customer.first_name }} {{customer.last_name }}</div>
    <div class="email"><i class="demo-icon icon-mail"></i>{{ customer.email }}</div> 
    {% if customer.default_address != nil %}
    <p class="address"><i class="demo-icon icon-location"></i> {{ customer.default_address.address1 }}{% if customer.default_address.city != empty and customer.default_address.city != blank %}, {{ customer.default_address.city}}{% endif %}, {% if customer.default_address.country != empty and customer.default_address.country != blank %} {{customer.default_address.country}}{% endif %}</p>
    {% endif %}
  </div>

  <a href="/account/addresses" class="btn btn-1">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a>
</div>