<div class="logo-list-container" style="background: {{ block.settings.bg_color }};">
  <div class="{{ _layout_class }}">
    {%- assign _item_per_row  = block.settings.item_per_row -%}
    {%- assign _img_size      = block.settings.img_size -%}

    <div class="logo-list-content" style="padding-top: {{ _padding_top }}px; padding-bottom: {{ _padding_bottom }}px;">
      <div class="logo-list-carousel" data-ipr="{{ section.settings.item_per_row }}">

        {% for i in (1..20) %}
          {%- assign _image = 'image_' | append: i -%}
          {% unless block.settings[_image] == blank %}
            <div class="item">
              <img {% if _lazyload %}class="lazyload" data-{% endif %}src="{{ block.settings[_image] | img_url: _img_size }}" alt="Logo list" />
            </div>
          {% endunless %}
        {% endfor %}

      </div>
    </div>

    <input type="hidden" name="carousel_properties" id="carousel_{{section.id}}"
            data-id=".logo-list-carousel"
            data-margin="0"
            data-resp="5.1"
            data-items-1="3"
            data-items-2="4"
            data-items-3="5"
            data-items-4="{{ _item_per_row }}">
  </div>
</div>