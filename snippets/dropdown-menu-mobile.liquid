<li class="dropdown{% if l.active %} active{% endif %}">
  <div class="dropdown-inner">
    <a href="{{ l.url }}" class="dropdown-link">
      <span>{{ l.title }}</span>
      {% capture _menu_label %}
      {%  if _sale_handles contains l.title %}{{_sale_menu_html}}{% endif %}
      {%  if _new_handles contains l.title %}{{_new_menu_html}}{% endif %}
      {%  if _hot_handles contains l.title %}{{_hot_menu_html}}{% endif %}
      {% endcapture %}
      {% if _menu_label != blank %}<span class="labels-wrapper">{{_menu_label}}</span>{% endif %}
    </a>
    <span class="expand"></span>
  </div>
  
  <ul class="dropdown-menu">
    <li class="back-prev-menu"><span class="expand back">Back</span></li>
    {% for l in linklists[submenu].links %}
      {% include 'nav-sub-link' %}
    {% endfor %}
  </ul>
</li>