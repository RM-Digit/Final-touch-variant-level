{% if section.settings.mobile_contact_bar %}
  {%- assign _header_phone_number = section.settings.mobile_contact_bar_phone -%}
  {%- assign _header_email = section.settings.mobile_contact_bar_email -%}
  {%- assign _header_store_info = section.settings.mobile_contact_bar_store_info -%}
  {%- assign _header_directions = section.settings.mobile_contact_bar_directions -%}

  <ul class="mobile-contact-bar list-inline">

    {% unless _header_phone_number == blank %}
      <li class="contactbar-item">
        <a class="contactbar-item-link" href="tel:{{ _header_phone_number }}">
          <i class="demo-icon icon-phone"></i>
          <span>{{ 'general.header.mobile_contact_bar.call' | t }}</span>
        </a>
      </li>
    {% endunless %}

    {% unless _header_email == blank %}
      <li class="contactbar-item">
        <a class="contactbar-item-link" href="mailto:{{ _header_email }}">
          <i class="demo-icon icon-mail"></i>
          <span>{{ 'general.header.mobile_contact_bar.contact' | t }}</span>
        </a>
      </li>
    {% endunless %}

    {% unless _header_store_info == blank %}
      <li class="contactbar-item ci-store-info">
        <a class="contactbar-item-link" href="javascript:;">
          <i class="demo-icon icon-clock"></i>
          <span>{{ 'general.header.mobile_contact_bar.store_info' | t }}</span>
        </a>
      </li>
    {% endunless %}

    {% unless _header_directions == blank %}
      <li class="contactbar-item">
        <a class="contactbar-item-link" href="{{ _header_directions }}">
          <i class="demo-icon icon-direction"></i>
          <span>{{ 'general.header.mobile_contact_bar.directions' | t }}</span>
        </a>
      </li>
    {% endunless %}

  </ul>

  {% unless _header_store_info == blank %}
    <div class="contactbar-info">
      <span class="contactbar-info-close"><i class="demo-icon icon-close"></i></span>
      {{ _header_store_info }}
    </div>
  {% endunless %}

{% endif %}